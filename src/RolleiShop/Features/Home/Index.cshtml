@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

    <div class="ui container center aligned">
      <div class = "ui huge header">@ViewData["Title"] </div>
    </div>

    <div class="ui vertical masthead center aligned segment">
      <img class="rellax" data-rellax-speed="2" style="
        filter:brightness(70%);
        background-attachment: fixed;
        background-position: top;
        height:36em; 
        width:100%; 
        position:relative;
        max-width:100%; 
        background-repeat: no-repeat; 
        background-size: cover; 
        background-image:url(/images/rollei.jpg);"/>

      <div class="ui container">
        <div class="ui stackable centered internally celled grid">
          <div class="eight wide column">
            <div id="dvMap" style="width: 100%; height: 350px"></div>
          </div>
          <div class="eight wide column">
            <div>
              <p>@ViewData["Message1"]</p>
              <p>@ViewData["Message2"]</p>
              <p>@ViewData["Message3"]</p>
            </div>
          </div>
        </div>
    </div>

@section scripts
{
  <script src="https://cdnjs.cloudflare.com/ajax/libs/rellax/1.5.0/rellax.min.js"></script>
  <script>
    var rellax = new Rellax('.rellax');
  </script>
}
