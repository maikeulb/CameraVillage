@{
    ViewData["Title"] = "Home Page";
}
  <style type="text/css">

    .masthead.segment {
      min-height: 700px;
      padding: 1em 0em;
      margin-right: 1em;
      margin-left: 1em;
    }

    .masthead h1.ui.header {
      margin-top: 1em;
      margin-bottom: 0em;
      font-size: 1.7em;
      font-weight: normal;
    }

    .masthead .image.full{
      display: block;
    }

    .masthead .image.mobile {
      display: none;
    }

    @@media only screen and (max-width: 700px) {

      .ui.secondary.menu .item ,
      .ui.secondary.menu .right.item{
        display: none;
      }

      .ui.secondary.menu .logo,
      .ui.secondary.menu .toc.item {
        display: block;
      }

      .masthead.segment {
        min-height: 350px;
      }
      .masthead h1.ui.header {
        font-size: 1em;
        margin-top: 0.5em;
      }

      .masthead .image.full{
        display: none;
      }

      .masthead .image.mobile{
        display: block;
      }


  </style>



  <div class="ui container">
    <div class="ui vertical masthead center aligned segment">
      <img class="ui fluid image full" src="/images/rollei.jpg">
      <img class="ui fluid image mobile" src="/images/rollei-2.jpg">
    </div>
  </div>
