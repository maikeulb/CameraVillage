@model RolleiShop.Features.ManageCatalog.Edit.Command

<div class="thumbnail">
  <img alt="@Model.Name" src="@Model.ImageUrl">
  <div class="caption-full">
    <h3 class="pull-right">@Model.Price</h3>
    <h3>
        <a href="#">@Model.Name</a>
    </h3>
    <p>@Model.Description</p>
  </div>
</div>

<form asp-action="Edit">
  <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

  <div class="field">
    <label asp-for="Description" class="label"></label>
    <input asp-for="Description" class="control input" type="text"></input>
  </div>

  <div class="field">
    <label asp-for="AvailableStock" class="label"></label>
    <input asp-for="AvailableStock" class="control input" type="text"></input>
  </div>

  <div class="field">
    <label asp-for="Price" class="label"></label>
    <input asp-for="Price" class="control input" type="text"></input>
  </div>

    <div class="form-group">
      <button type="submit" class="btn btn-info">Submit</button>
  </div>
</form>
