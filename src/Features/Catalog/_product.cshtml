@model CatalogItemViewModel

<form asp-controller="Basket" asp-action="AddToBasket">
  <div class = "ui card" >

    <div class = "image">
      <img class = "ui centered small rounded image" src="
  http://www.rolleiclub.com/cameras/tlr/im/031_Rolleiflex_T_1958-xxxx.jpg
    " />
    </div>

    <div class="content">
      <h4 class="ui header">@Model.Name</h5>
      <h5 class="ui sub header">Price</h5>
      <span>$@Model.Price.ToString("N2")</span>
    </div>

    <input class="ui primary basic button" type="submit" value="ADD TO CART" />
  </div>
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.Name" name="name" />
    <input type="hidden" asp-for="@Model.ImageUrl" name="ImageUrl" />
    <input type="hidden" asp-for="@Model.Price" name="price" />
</form>
