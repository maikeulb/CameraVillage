@using Microsoft.AspNetCore.Identity
@using RolleiShop.Models.Entities
@using RolleiShop.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<div class="ui dropdown">
  <div class="text">
    @UserManager.GetUserName(User)
  <i class="dropdown icon"></i>
  </div>
  <div class="menu">
      <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="item">
       Manage
      </a>
      <a asp-area="" asp-controller="Order" asp-action="Index" title="Manage" class="item">
       My Orders
      </a>
  </div>
</div>

  <form  asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" >
    <div class="fluid item">
      <button type="submit" class="ui button basic">Log out</button>
    </div>
  </form>
}
else
{
  <div class="fluid item">
    <a asp-area="" class="item" asp-controller="Account" asp-action="Register">Register</a>
    <a asp-area="" class="ui button basic" asp-controller="Account" asp-action="Login">Log in</a>
  </div>
}

<script>
$('.ui.dropdown')
  .dropdown()
;
</script>
